# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# Supporte MySQL et PostgreSQL
# Pour MySQL: DB_DIALECT=mysql (ou laissez vide, détection automatique)
# Pour PostgreSQL: DB_DIALECT=postgres
DB_DIALECT=mysql
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your-database-password
DB_NAME=dailyfix
DB_PORT=3306
# Pour PostgreSQL, utilisez DB_PORT=5432

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# CORS / Frontend (lien de réinitialisation mot de passe dans l'email)
FRONTEND_URL=https://dali2000.github.io/DailyFix/

# SMTP (envoi email mot de passe oublié ; si non configuré, le lien est affiché en console en dev)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=
# SMTP_PASS=
# SMTP_FROM=noreply@example.com

